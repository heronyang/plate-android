<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_2"
    >

    <TextView
        style="@style/margin_left_right"
        android:gravity="left"
        android:layout_width="wrap_content"
        android:text="Name"
        android:layout_height="wrap_content"
        android:id="@+id/listrow_menu_tv"
        android:textIsSelectable="false"
        android:textSize="@dimen/menu_text_size"
        android:padding="@dimen/menu_padding"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price"
        android:textSize="@dimen/menu_price_size"
        android:id="@+id/tv_listrow_price"
        android:layout_marginRight="25dp"
        android:layout_alignBaseline="@+id/listrow_menu_tv"
        android:layout_alignBottom="@+id/listrow_menu_tv"
        android:layout_toLeftOf="@+id/listrow_menu_spinner" />

    <Spinner
        style="@style/margin_left_right"
        android:layout_height="wrap_content"
        android:layout_width="@dimen/menu_spinner_width"
        android:id="@+id/listrow_menu_spinner"
        android:layout_marginRight="15dp"
        android:layout_alignBaseline="@+id/listrow_menu_tv"
        android:layout_alignParentRight="true" />

</RelativeLayout>
