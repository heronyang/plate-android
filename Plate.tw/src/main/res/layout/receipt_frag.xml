<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/gray_version"
    >


    <TextView
        android:layout_marginTop="@dimen/rec_title_padding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/title_textsize"
        android:textColor="@color/foreground_1"
        android:id="@+id/tv_receipt_welcome"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/receipt_button_text"
        android:id="@+id/button"
        android:layout_below="@+id/tv_receipt_welcome"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:background="@color/foreground_2"
        android:layout_marginBottom="@dimen/co_margin_side"
        android:layout_marginLeft="@dimen/co_margin_side"
        android:layout_marginRight="@dimen/co_margin_side"
        android:layout_marginTop="@dimen/rec_line_padding"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/button"
        android:layout_alignParentLeft="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight=".15"
            android:textColor="@color/foreground_3"
            android:id="@+id/tv_order_time"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold"
            android:textSize="@dimen/slip_num_size"
            android:id="@+id/tv_slip_num"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight=".15"
            android:id="@+id/tv_rec_restaurant"
            android:layout_gravity="center_horizontal" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#000000" />

        <ScrollView
            style="@style/margin_left_right"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight=".70"
            android:layout_gravity="center_horizontal">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
                <TextView
                    android:layout_weight=".70"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvReceipt"
                    android:text="Please wait - - -"
                    android:textSize="@dimen/rest_textsize"
                    />

                <TextView
                    android:layout_weight=".30"
                    android:layout_width="0dp"
                    android:layout_gravity="right"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/rest_textsize"
                    android:id="@+id/tv_receipt_price" />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</RelativeLayout>